id: arm-ptp-full
unit: test plan
_name: i.MX PTP tests
_description: Full PTP tests for i.MX devices
include:
nested_part:
    arm-ptp-manual
    arm-ptp-automated
    after-suspend-arm-ptp-manual
    after-suspend-arm-ptp-automated

id: arm-ptp-manual
unit: test plan
_name: i.MX PTP manual tests
_description: Manual PTP tests for i.MX devices
bootstrap_include:
    ptp/ptp-devices
include:
    ptp/ptp4l-time-sync-for-.*-manual
    
id: arm-ptp-automated
unit: test plan
_name: i.MX PTP auto tests
_description: Automated PTP tests for i.MX devices
bootstrap_include:
    ptp/ptp-devices
include:
    ptp/verify-PTP-support-for-.*
    ptp/ptp4l-time-sync-for-.*-auto

id: after-suspend-arm-ptp
unit: test plan
_name: i.MX after suspend PTP manual tests
_description: Manual after suspend PTP tests for i.MX devices
bootstrap_include:
    ptp/ptp-devices
include:
    after-suspend-ptp/ptp4l-time-sync-for-.*
    
id: after-suspend-arm-ptp-automated
unit: test plan
_name: i.MX after suspend PTP auto tests
_description: Automated after suspend PTP tests for i.MX devices
bootstrap_include:
    ptp/ptp-devices
include:
    after-suspend-ptp/verify-PTP-support-for-.*
    after-suspend-ptp/ptp4l-time-sync-for-.*-auto

